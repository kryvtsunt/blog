<% include ./partials/header.ejs %>
<div class="ui main text container">
    <div class="ui huge header"> My Blog </div>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <% blog.forEach(function(post) { %>
            <div class="item">
                <div class="image">
                    <img src="<%= post.image %>">
                </div>
                <div class="content">
                    <a class="header" href="/posts/<%= post._id %>"> <%= post.title %> </a>
                    <div class="meta">
                        <span><%= post.created.toDateString() %></span>
                    </div>
                    <div class="description">
                        <p><%- post.body.substring(0, 50) %>...</p>
                    </div>
                    <div class="extra">
                        <a class="ui floated primary button" href="/posts/<%= post._id %>"> Read More
                            <i class="right chevron icon"></i></a>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
    </div>
    <br/>

</div>

<% include ./partials/footer.ejs %>


