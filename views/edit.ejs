<% include partials/header.ejs%>

<div class="ui main text container segment">
    <div class="ui huge header"> Edit Post</div>
    <form class="ui form" action="/posts/<%= post._id %>?_method=PUT" method="POST">
        <div class="field">
            <label> Title </label>
            <input type="text" name="blog[title]" value="<%= post.title %>" required>
        </div>
        <div class="field">
            <label> Image </label>
            <input type="text" name="blog[image]" value="<%= post.image %>" required>
        </div>
        <div class="field">
            <label> Post Content </label>
            <textarea name="blog[body]" required><%= post.body %></textarea>
        </div>
        <input class="ui green button" type="submit">
    </form>
</div>

